<% include ../includes/header %>
<% include ../includes/navigation %>

<div class="container-fluid">
    <div class="alert alert-danger alert-fluid" role="alert">
        <h4 class="alert-heading">The email service has not been enabled.</h4>
        <p class="mb-0">You can not change your password now.</p>
    </div>
    <form action="/forgetPassword" method="POST">
        <div class="form-group">
            <label for="email">Email address</label>
            <input class="form-control" type="email" name="email" id="email">
        </div>
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn-lg btn-primary">Submit</button>
        </div>
    </form>

</div>

<% include ../includes/footer %>