<% include ../includes/header %>
<% include ../includes/navigation %>

<div class="container">
    <form action="/products/<%= prod.pid %>/comments" method="POST"> 
        <h2><%= prod.name %></h2>
        <div class="form-group">
            <label for="commentText">Comment</label>
            <input type="text" class="form-control" name="comment[text]" placeholder="Your comment">
        </div>
        <div class="form-group">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="myProduct" value="<%= prod %>">
            <button class="btn-lg btn-primary">Submit</button>
        </div>
    </form>
</div>

<% include ../includes/footer %>